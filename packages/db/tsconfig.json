{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    // "rootDir": "src", // removed to allow generated/
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext" // <-- Added for @prisma/adapter-pg compatibility
  },
  "include": ["src", "generated"],
  "exclude": ["node_modules", "dist"]
}